<!-- Page Header -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Trashed Projects</h1>
        <p class="mt-1 text-sm text-gray-500">View and restore deleted offplan projects</p>
    </div>
    <a href="/projects" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Projects
    </a>
</div>

<!-- Info Banner -->
<div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Trashed Items</h3>
            <div class="mt-2 text-sm text-yellow-700">
                <p>Projects in trash can be restored. Click "Restore" to move a project back to active status.</p>
            </div>
        </div>
    </div>
</div>

<!-- Projects Table -->
<div class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden">
    {{#if projects.length}}
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Project
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Developer
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Deleted
                    </th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {{#each projects}}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gray-200 rounded-lg overflow-hidden flex-shrink-0 opacity-50">
                                {{#if this.featured_image}}
                                <img src="{{this.featured_image}}" alt="{{this.name}}" class="w-full h-full object-cover">
                                {{else}}
                                <div class="w-full h-full flex items-center justify-center text-gray-400">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                {{/if}}
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-500">{{this.name}}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm text-gray-500">{{#if this.developer_name}}{{this.developer_name}}{{else if this.developer}}{{this.developer.name}}{{else}}N/A{{/if}}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{#if this.updated_at}}
                        {{formatDate this.updated_at}}
                        {{else}}
                        N/A
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <form method="POST" action="/projects/{{this.id}}/restore" class="inline">
                            <button
                                type="submit"
                                class="text-green-600 hover:text-green-900 mr-3"
                            >Restore</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.totalPages 1)}}
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <p class="text-sm text-gray-700">
                Showing <span class="font-medium">{{pagination.page}}</span> of <span class="font-medium">{{pagination.totalPages}}</span> pages
                (<span class="font-medium">{{pagination.total}}</span> total trashed projects)
            </p>
            <nav class="flex items-center gap-2">
                {{#if pagination.hasPrev}}
                <a
                    href="/projects/trashed?page={{subtract pagination.page 1}}"
                    class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50"
                >
                    Previous
                </a>
                {{/if}}

                {{#each (range 1 pagination.totalPages)}}
                <a
                    href="/projects/trashed?page={{this}}"
                    class="px-3 py-2 text-sm font-medium {{#if (eq this ../pagination.page)}}bg-purple-600 text-white{{else}}text-gray-700 bg-white hover:bg-gray-50{{/if}} border border-gray-300 rounded-lg"
                >
                    {{this}}
                </a>
                {{/each}}

                {{#if pagination.hasNext}}
                <a
                    href="/projects/trashed?page={{add pagination.page 1}}"
                    class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50"
                >
                    Next
                </a>
                {{/if}}
            </nav>
        </div>
    </div>
    {{/if}}

    {{else}}
    <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No trashed projects</h3>
        <p class="mt-1 text-sm text-gray-500">Deleted projects will appear here.</p>
        <div class="mt-6">
            <a href="/projects" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Projects
            </a>
        </div>
    </div>
    {{/if}}
</div>
