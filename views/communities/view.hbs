<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li><a href="/communities" class="text-gray-500 hover:text-gray-700">Communities</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-900 font-medium">{{community.name}}</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div class="flex items-center">
        {{#if community.image}}
        <div class="w-16 h-16 rounded-xl bg-gray-200 mr-4 overflow-hidden">
            <img src="{{community.image}}" alt="{{community.name}}" class="w-full h-full object-cover">
        </div>
        {{else}}
        <div class="w-16 h-16 rounded-xl bg-yellow-100 mr-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
        </div>
        {{/if}}
        <div>
            <h1 class="text-2xl font-bold text-gray-900">{{community.name}}</h1>
            <p class="text-gray-600">ID: {{community.id}} | Slug: {{community.slug}}</p>
        </div>
    </div>
    <div class="flex items-center space-x-3 mt-4 sm:mt-0">
        <a href="/communities/{{community.id}}/edit" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
        </a>
        <a href="/communities" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to List
        </a>
    </div>
</div>

<!-- Success/Error Messages -->
{{#if success}}
<div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <p class="text-green-800">{{success}}</p>
    </div>
</div>
{{/if}}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Details -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Basic Information -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="p-6 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900">Basic Information</h3>
            </div>
            <div class="p-6">
                <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Community Name</dt>
                        <dd class="mt-1 text-gray-900">{{community.name}}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Slug</dt>
                        <dd class="mt-1 text-gray-900">{{community.slug}}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Priority</dt>
                        <dd class="mt-1 text-gray-900">{{community.priority}}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Has Sub-Communities</dt>
                        <dd class="mt-1">
                            {{#if (eq community.has_sub_communities "1")}}
                            <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Yes</span>
                            {{else}}
                            <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full">No</span>
                            {{/if}}
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- SEO Information -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="p-6 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900">SEO Information</h3>
            </div>
            <div class="p-6">
                <dl class="space-y-6">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Meta Title</dt>
                        <dd class="mt-1 text-gray-900">{{#if community.meta_title}}{{community.meta_title}}{{else}}<span class="text-gray-400 italic">Not set</span>{{/if}}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Meta Description</dt>
                        <dd class="mt-1 text-gray-900">{{#if community.meta_description}}{{community.meta_description}}{{else}}<span class="text-gray-400 italic">Not set</span>{{/if}}</dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Sub-Communities -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="p-6 border-b border-gray-100">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-900">Sub-Communities ({{subCommunities.length}})</h3>
                    <a href="/sub-communities/create?community_id={{community.id}}" class="text-sm text-blue-600 hover:text-blue-700">
                        Add Sub-Community
                    </a>
                </div>
            </div>
            <div class="p-6">
                {{#if subCommunities.length}}
                <div class="space-y-3">
                    {{#each subCommunities}}
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div class="flex items-center">
                            {{#if this.image}}
                            <div class="w-10 h-10 rounded-lg bg-gray-200 mr-3 overflow-hidden">
                                <img src="{{this.image}}" alt="{{this.name}}" class="w-full h-full object-cover">
                            </div>
                            {{else}}
                            <div class="w-10 h-10 rounded-lg bg-blue-100 mr-3 flex items-center justify-center">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                                </svg>
                            </div>
                            {{/if}}
                            <div>
                                <p class="font-medium text-gray-900">{{this.name}}</p>
                                <p class="text-sm text-gray-500">{{this.slug}}</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            {{#if (eq this.status 1)}}
                            <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Active</span>
                            {{else}}
                            <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full">Inactive</span>
                            {{/if}}
                            <a href="/sub-communities/{{this.id}}" class="p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="text-center py-8">
                    <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                    </svg>
                    <p class="text-gray-500">No sub-communities found</p>
                    <a href="/sub-communities/create?community_id={{community.id}}" class="mt-2 inline-block text-blue-600 hover:underline">Add the first sub-community</a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Status Cards -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Status</h3>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-gray-600">Featured</span>
                    {{#if (eq community.featured "1")}}
                    <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">Yes</span>
                    {{else}}
                    <span class="px-3 py-1 bg-gray-100 text-gray-600 text-sm font-medium rounded-full">No</span>
                    {{/if}}
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-gray-600">High-End</span>
                    {{#if (eq community.highend "1")}}
                    <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm font-medium rounded-full">Yes</span>
                    {{else}}
                    <span class="px-3 py-1 bg-gray-100 text-gray-600 text-sm font-medium rounded-full">No</span>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- Images -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Images</h3>
            <div class="space-y-4">
                <div>
                    <p class="text-sm font-medium text-gray-500 mb-2">Primary Image</p>
                    {{#if community.image}}
                    <div class="w-full aspect-video rounded-lg bg-gray-200 overflow-hidden">
                        <img src="{{community.image}}" alt="{{community.name}}" class="w-full h-full object-cover">
                    </div>
                    {{else}}
                    <div class="w-full aspect-video rounded-lg bg-gray-100 flex items-center justify-center">
                        <span class="text-gray-400 text-sm">No image</span>
                    </div>
                    {{/if}}
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500 mb-2">Secondary Image</p>
                    {{#if community.image2}}
                    <div class="w-full aspect-video rounded-lg bg-gray-200 overflow-hidden">
                        <img src="{{community.image2}}" alt="{{community.name}}" class="w-full h-full object-cover">
                    </div>
                    {{else}}
                    <div class="w-full aspect-video rounded-lg bg-gray-100 flex items-center justify-center">
                        <span class="text-gray-400 text-sm">No image</span>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-3">
                <a href="/communities/{{community.id}}/edit" class="w-full flex items-center justify-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Community
                </a>
                <a href="/sub-communities/create?community_id={{community.id}}" class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Sub-Community
                </a>
                <button
                    onclick="deleteCommunity({{community.id}}, '{{community.name}}')"
                    class="w-full flex items-center justify-center px-4 py-2 border border-red-300 text-red-700 rounded-lg hover:bg-red-50 transition-colors"
                >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete Community
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
        <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-full mx-auto mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 text-center mb-2">Delete Community</h3>
        <p class="text-gray-600 text-center mb-6">Are you sure you want to delete "<span id="delete-community-name" class="font-medium"></span>"? This action cannot be undone.</p>
        <div class="flex space-x-4">
            <button onclick="closeDeleteModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                Cancel
            </button>
            <form id="delete-form" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function deleteCommunity(id, name) {
        document.getElementById('delete-community-name').textContent = name;
        document.getElementById('delete-form').action = '/communities/' + id + '?_method=DELETE';
        document.getElementById('delete-modal').classList.remove('hidden');
        document.getElementById('delete-modal').classList.add('flex');
    }

    function closeDeleteModal() {
        document.getElementById('delete-modal').classList.add('hidden');
        document.getElementById('delete-modal').classList.remove('flex');
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeDeleteModal();
        }
    });

    document.getElementById('delete-modal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeDeleteModal();
        }
    });
</script>
