<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Communities</h1>
        <p class="text-gray-600 mt-1">Manage all {{pagination.total}} communities</p>
    </div>
    <a href="/communities/create" class="mt-4 sm:mt-0 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Community
    </a>
</div>

<!-- Success/Error Messages -->
{{#if success}}
<div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <p class="text-green-800">{{success}}</p>
    </div>
</div>
{{/if}}

{{#if error}}
<div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        <p class="text-red-800">{{error}}</p>
    </div>
</div>
{{/if}}

<!-- Search and Filters -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6">
    <div class="p-4">
        <form action="/communities" method="GET" class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
                <div class="relative">
                    <input
                        type="text"
                        name="search"
                        value="{{search}}"
                        placeholder="Search communities..."
                        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                    <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <button type="submit" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                Search
            </button>
            {{#if search}}
            <a href="/communities" class="px-4 py-2 text-gray-600 hover:text-gray-900 transition-colors">
                Clear
            </a>
            {{/if}}
        </form>
    </div>
</div>

<!-- Communities Table -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Slug</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Featured</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">High-End</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {{#each communities}}
                <tr class="hover:bg-gray-50 transition-colors" id="community-row-{{this.id}}">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{this.id}}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            {{#if this.image}}
                            <div class="w-10 h-10 rounded-lg bg-gray-200 mr-3 overflow-hidden">
                                <img src="{{this.image}}" alt="{{this.name}}" class="w-full h-full object-cover">
                            </div>
                            {{else}}
                            <div class="w-10 h-10 rounded-lg bg-yellow-100 mr-3 flex items-center justify-center">
                                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                            {{/if}}
                            <div>
                                <a href="/communities/{{this.id}}" class="font-medium text-gray-900 hover:text-blue-600">{{this.name}}</a>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{this.slug}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{this.priority}}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if (eq this.featured "1")}}
                        <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Yes</span>
                        {{else}}
                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full">No</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if (eq this.highend "1")}}
                        <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded-full">Yes</span>
                        {{else}}
                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full">No</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex items-center justify-end space-x-2">
                            <a href="/communities/{{this.id}}" class="p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="View">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </a>
                            <a href="/communities/{{this.id}}/edit" class="p-2 text-gray-600 hover:text-yellow-600 hover:bg-yellow-50 rounded-lg transition-colors" title="Edit">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </a>
                            <button
                                type="button"
                                onclick="deleteCommunity({{this.id}}, '{{this.name}}')"
                                class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                title="Delete"
                            >
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                        <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        </svg>
                        <p class="text-lg font-medium">No communities found</p>
                        <p class="text-sm">{{#if search}}Try a different search term or {{/if}}<a href="/communities/create" class="text-blue-600 hover:underline">create a new community</a></p>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.totalPages 1)}}
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row items-center justify-between">
            <p class="text-sm text-gray-600 mb-4 sm:mb-0">
                Showing page {{pagination.page}} of {{pagination.totalPages}} ({{pagination.total}} total)
            </p>
            <div class="flex items-center space-x-2">
                {{#if pagination.hasPrev}}
                <a href="/communities?page={{pagination.prevPage}}{{#if search}}&search={{search}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Previous</a>
                {{/if}}
                {{#each pagination.pages}}
                {{#if this.ellipsis}}
                <span class="px-2 py-2 text-sm text-gray-400">...</span>
                {{else}}
                <a href="/communities?page={{this.number}}{{#if ../search}}&search={{../search}}{{/if}}"
                   class="px-3 py-2 text-sm {{#if this.active}}bg-purple-600 text-white{{else}}text-gray-600 bg-white border border-gray-300 hover:bg-gray-50{{/if}} rounded-lg">{{this.number}}</a>
                {{/if}}
                {{/each}}
                {{#if pagination.hasNext}}
                <a href="/communities?page={{pagination.nextPage}}{{#if search}}&search={{search}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
        <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-full mx-auto mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 text-center mb-2">Delete Community</h3>
        <p class="text-gray-600 text-center mb-6">Are you sure you want to delete "<span id="delete-community-name" class="font-medium"></span>"? This action cannot be undone.</p>
        <div class="flex space-x-4">
            <button onclick="closeDeleteModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                Cancel
            </button>
            <form id="delete-form" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function deleteCommunity(id, name) {
        document.getElementById('delete-community-name').textContent = name;
        document.getElementById('delete-form').action = '/communities/' + id + '?_method=DELETE';
        document.getElementById('delete-modal').classList.remove('hidden');
        document.getElementById('delete-modal').classList.add('flex');
    }

    function closeDeleteModal() {
        document.getElementById('delete-modal').classList.add('hidden');
        document.getElementById('delete-modal').classList.remove('flex');
    }

    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeDeleteModal();
        }
    });

    // Close modal on backdrop click
    document.getElementById('delete-modal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeDeleteModal();
        }
    });
</script>
