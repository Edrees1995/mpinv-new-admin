<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/users" class="text-gray-500 hover:text-gray-700">Admin Users</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/users/{{user.id}}" class="text-gray-500 hover:text-gray-700">{{user.first_name}} {{user.last_name}}</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Edit</li>
    </ol>
</nav>

<div class="max-w-2xl">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Admin User</h1>

    <form action="/users/{{user.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="space-y-6">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Account Info</h2>
                <div class="space-y-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label for="first_name" class="block text-sm font-medium text-gray-700 mb-1">First Name <span class="text-red-500">*</span></label>
                            <input type="text" name="first_name" id="first_name" value="{{user.first_name}}" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="last_name" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                            <input type="text" name="last_name" id="last_name" value="{{user.last_name}}"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                        <input type="email" name="email" id="email" value="{{user.email}}" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                        <input type="password" name="password" id="password" minlength="6"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <p class="mt-1 text-xs text-gray-500">Leave blank to keep current password</p>
                    </div>
                    <div>
                        <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                        <select name="status" id="status"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="active" {{#if (eq user.status "active")}}selected{{/if}}>Active</option>
                            <option value="inactive" {{#if (eq user.status "inactive")}}selected{{/if}}>Inactive</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="flex space-x-3">
                <a href="/users/{{user.id}}" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors text-center">Cancel</a>
                <button type="submit" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">Update</button>
            </div>
        </div>
    </form>
</div>
