<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Amenities</h1>
        <p class="text-gray-600 mt-1">Manage all {{pagination.total}} amenities</p>
    </div>
    <a href="/amenities/create" class="mt-4 sm:mt-0 inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Amenity
    </a>
</div>

<!-- Search -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6">
    <div class="p-4">
        <form action="/amenities" method="GET" class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
                <input type="text" name="search" value="{{filters.search}}" placeholder="Search amenities..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <button type="submit" class="px-6 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-colors">Filter</button>
            {{#if filters.search}}
            <a href="/amenities" class="px-4 py-2 text-gray-600 hover:text-gray-900">Clear</a>
            {{/if}}
        </form>
    </div>
</div>

<!-- Amenities Table -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amenities Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Icon</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Priority</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {{#each amenities}}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="/amenities/{{this.id}}" class="font-medium text-gray-900 hover:text-indigo-600">{{this.name}}</a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{#if this.icon_list}}
                        <span class="text-gray-700">{{this.icon_list}}</span>
                        {{else}}
                        <span class="text-gray-400">-</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if (eq this.status "A")}}
                        <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Active</span>
                        {{else}}
                        <span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">Inactive</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{this.priority}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex items-center justify-end space-x-2">
                            <a href="/amenities/{{this.id}}" class="p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg" title="View">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                            </a>
                            <a href="/amenities/{{this.id}}/edit" class="p-2 text-gray-600 hover:text-yellow-600 hover:bg-yellow-50 rounded-lg" title="Edit">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            </a>
                            <button hx-delete="/amenities/{{this.id}}" hx-confirm="Are you sure you want to delete {{this.name}}?" hx-target="closest tr" hx-swap="outerHTML"
                                class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg" title="Delete">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            </button>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                        <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                        </svg>
                        <p class="text-lg font-medium">No amenities found</p>
                        <p class="text-sm">{{#if filters.search}}Try a different search or {{/if}}<a href="/amenities/create" class="text-indigo-600 hover:underline">add a new amenity</a></p>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{#if (gt pagination.totalPages 1)}}
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row items-center justify-between">
            <p class="text-sm text-gray-600 mb-4 sm:mb-0">Showing page {{pagination.page}} of {{pagination.totalPages}} ({{pagination.total}} total)</p>
            <div class="flex items-center space-x-2">
                {{#if pagination.hasPrev}}
                <a href="/amenities?page={{pagination.prevPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}" class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Previous</a>
                {{/if}}
                {{#each pagination.pages}}
                {{#if this.ellipsis}}<span class="px-2 py-2 text-sm text-gray-400">...</span>
                {{else}}<a href="/amenities?page={{this.number}}{{#if ../filters.search}}&search={{../filters.search}}{{/if}}" class="px-3 py-2 text-sm {{#if this.active}}bg-purple-600 text-white{{else}}text-gray-600 bg-white border border-gray-300 hover:bg-gray-50{{/if}} rounded-lg">{{this.number}}</a>
                {{/if}}
                {{/each}}
                {{#if pagination.hasNext}}
                <a href="/amenities?page={{pagination.nextPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}" class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
</div>
