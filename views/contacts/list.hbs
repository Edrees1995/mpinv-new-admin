<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Contact Inquiries</h1>
        <p class="text-gray-600 mt-1">{{pagination.total}} total inquiries</p>
    </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6">
    <div class="p-4">
        <form action="/contacts" method="GET" class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
                <input type="text" name="search" value="{{filters.search}}" placeholder="Search by name, email, phone or message..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <select name="type" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Types</option>
                <option value="CONTACT" {{#if (eq filters.type "CONTACT")}}selected{{/if}}>Contact</option>
                <option value="ENQUIRY" {{#if (eq filters.type "ENQUIRY")}}selected{{/if}}>Enquiry</option>
            </select>
            <select name="status" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Status</option>
                <option value="unread" {{#if (eq filters.status "unread")}}selected{{/if}}>Unread</option>
                <option value="read" {{#if (eq filters.status "read")}}selected{{/if}}>Read</option>
            </select>
            <button type="submit" class="px-6 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-colors">
                Filter
            </button>
            {{#if (or filters.search filters.type filters.status)}}
            <a href="/contacts" class="px-4 py-2 text-gray-600 hover:text-gray-900">Clear</a>
            {{/if}}
        </form>
    </div>
</div>

<!-- Contacts List -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div>
        <table class="w-full table-fixed">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-1/4">From</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-2/5">Message</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-20">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-20">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-24">Date</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase w-20">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {{#each contacts}}
                <tr class="hover:bg-gray-50 transition-colors {{#unless this.is_read}}bg-blue-50/40{{/unless}}">
                    <td class="px-6 py-4">
                        <div class="flex items-center">
                            {{#unless this.is_read}}
                            <div class="w-2 h-2 bg-blue-500 rounded-full mr-3 flex-shrink-0"></div>
                            {{else}}
                            <div class="w-2 h-2 mr-3 flex-shrink-0"></div>
                            {{/unless}}
                            <div class="min-w-0 flex-1">
                                <a href="/contacts/{{this.id}}" class="font-medium text-gray-900 hover:text-blue-600 block truncate {{#unless this.is_read}}font-semibold{{/unless}}">{{this.name}}</a>
                                <p class="text-xs text-gray-500 truncate">{{this.email}}</p>
                                {{#if this.phone}}
                                <p class="text-xs text-gray-400">{{this.phone}}</p>
                                {{/if}}
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <a href="/contacts/{{this.id}}" class="text-sm text-gray-600 line-clamp-2 hover:text-blue-600">{{truncate (stripTags this.message) 120}}</a>
                        {{#if this.property_id}}
                        <p class="text-xs text-purple-600 mt-1">Property #{{this.property_id}}</p>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if (eq this.contact_type "ENQUIRY")}}
                        <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded-full">Enquiry</span>
                        {{else}}
                        <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">Contact</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if this.is_read}}
                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full">Read</span>
                        {{else}}
                        <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">New</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{formatDate this.date}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex items-center justify-end space-x-2">
                            <a href="/contacts/{{this.id}}" class="p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg" title="View">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </a>
                            <button onclick="deleteContact({{this.id}}, '{{this.name}}')"
                                class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg" title="Delete">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <p class="text-lg font-medium">No inquiries found</p>
                        <p class="text-sm">{{#if filters.search}}Try a different search{{/if}}</p>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.totalPages 1)}}
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row items-center justify-between">
            <p class="text-sm text-gray-600 mb-4 sm:mb-0">
                Showing page {{pagination.page}} of {{pagination.totalPages}} ({{pagination.total}} total)
            </p>
            <div class="flex items-center space-x-2">
                {{#if pagination.hasPrev}}
                <a href="/contacts?page={{pagination.prevPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.type}}&type={{filters.type}}{{/if}}{{#if filters.status}}&status={{filters.status}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Previous</a>
                {{/if}}
                {{#each pagination.pages}}
                {{#if this.ellipsis}}
                <span class="px-2 py-2 text-sm text-gray-400">...</span>
                {{else}}
                <a href="/contacts?page={{this.number}}{{#if ../filters.search}}&search={{../filters.search}}{{/if}}{{#if ../filters.type}}&type={{../filters.type}}{{/if}}{{#if ../filters.status}}&status={{../filters.status}}{{/if}}"
                   class="px-3 py-2 text-sm {{#if this.active}}bg-purple-600 text-white{{else}}text-gray-600 bg-white border border-gray-300 hover:bg-gray-50{{/if}} rounded-lg">{{this.number}}</a>
                {{/if}}
                {{/each}}
                {{#if pagination.hasNext}}
                <a href="/contacts?page={{pagination.nextPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.type}}&type={{filters.type}}{{/if}}{{#if filters.status}}&status={{filters.status}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
</div>

<!-- Delete Modal -->
<div id="delete-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
        <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-full mx-auto mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 text-center mb-2">Delete Inquiry</h3>
        <p class="text-gray-600 text-center mb-6">Are you sure you want to delete the inquiry from "<span id="delete-contact-name" class="font-medium"></span>"? This action cannot be undone.</p>
        <div class="flex space-x-4">
            <button onclick="closeDeleteModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">Cancel</button>
            <form id="delete-form" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">Delete</button>
            </form>
        </div>
    </div>
</div>

<script>
    function deleteContact(id, name) {
        document.getElementById('delete-contact-name').textContent = name;
        document.getElementById('delete-form').action = '/contacts/' + id + '?_method=DELETE';
        document.getElementById('delete-modal').classList.remove('hidden');
        document.getElementById('delete-modal').classList.add('flex');
    }
    function closeDeleteModal() {
        document.getElementById('delete-modal').classList.add('hidden');
        document.getElementById('delete-modal').classList.remove('flex');
    }
    document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeDeleteModal(); });
    document.getElementById('delete-modal').addEventListener('click', function(e) { if (e.target === this) closeDeleteModal(); });
</script>
