<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Articles</h1>
        <p class="text-gray-600 mt-1">Manage all {{pagination.total}} articles</p>
    </div>
    <a href="/articles/create" class="mt-4 sm:mt-0 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Article
    </a>
</div>

<!-- Search and Filters -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6">
    <div class="p-4">
        <form action="/articles" method="GET" class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
                <input type="text" name="search" value="{{filters.search}}" placeholder="Search articles..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <select name="status" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Status</option>
                <option value="published" {{#if (eq filters.status "published")}}selected{{/if}}>Published</option>
                <option value="draft" {{#if (eq filters.status "draft")}}selected{{/if}}>Draft</option>
            </select>
            <button type="submit" class="px-6 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-colors">
                Filter
            </button>
            {{#if filters.search}}
            <a href="/articles" class="px-4 py-2 text-gray-600 hover:text-gray-900">Clear</a>
            {{/if}}
        </form>
    </div>
</div>

<!-- Articles Table -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Article</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {{#each articles}}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4">
                        <div class="flex items-center">
                            {{#if this.banner}}
                            <img src="{{this.banner}}" alt="{{this.title}}" class="w-12 h-12 rounded-lg object-cover mr-3 flex-shrink-0">
                            {{else}}
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                                </svg>
                            </div>
                            {{/if}}
                            <div class="min-w-0">
                                <a href="/articles/{{this.id}}" class="font-medium text-gray-900 hover:text-blue-600 block truncate max-w-xs">{{this.title}}</a>
                                <p class="text-xs text-gray-500 truncate max-w-xs">{{this.slug}}</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{#if this.type}}
                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded">{{this.type}}</span>
                        {{else}}
                        <span class="text-gray-400">-</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if (eq this.status "published")}}
                        <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Published</span>
                        {{else}}
                        <span class="px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded-full">{{this.status}}</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{formatDate this.date_added}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex items-center justify-end space-x-2">
                            <a href="/articles/{{this.id}}" class="p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg" title="View">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </a>
                            <a href="/articles/{{this.id}}/edit" class="p-2 text-gray-600 hover:text-yellow-600 hover:bg-yellow-50 rounded-lg" title="Edit">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </a>
                            <button hx-delete="/articles/{{this.id}}?_method=DELETE" hx-confirm="Are you sure you want to delete this article?" hx-target="closest tr" hx-swap="outerHTML"
                                class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg" title="Delete">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                        <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                        <p class="text-lg font-medium">No articles found</p>
                        <p class="text-sm">{{#if filters.search}}Try a different search or {{/if}}<a href="/articles/create" class="text-blue-600 hover:underline">add a new article</a></p>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.totalPages 1)}}
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row items-center justify-between">
            <p class="text-sm text-gray-600 mb-4 sm:mb-0">
                Showing page {{pagination.page}} of {{pagination.totalPages}} ({{pagination.total}} total)
            </p>
            <div class="flex items-center space-x-2">
                {{#if pagination.hasPrev}}
                <a href="/articles?page={{pagination.prevPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.status}}&status={{filters.status}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Previous</a>
                {{/if}}
                {{#each pagination.pages}}
                {{#if this.ellipsis}}
                <span class="px-2 py-2 text-sm text-gray-400">...</span>
                {{else}}
                <a href="/articles?page={{this.number}}{{#if ../filters.search}}&search={{../filters.search}}{{/if}}{{#if ../filters.status}}&status={{../filters.status}}{{/if}}"
                   class="px-3 py-2 text-sm {{#if this.active}}bg-blue-600 text-white{{else}}text-gray-600 bg-white border border-gray-300 hover:bg-gray-50{{/if}} rounded-lg">{{this.number}}</a>
                {{/if}}
                {{/each}}
                {{#if pagination.hasNext}}
                <a href="/articles?page={{pagination.nextPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.status}}&status={{filters.status}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
</div>
