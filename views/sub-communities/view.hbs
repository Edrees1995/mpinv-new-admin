<!-- Breadcrumb -->
<div class="mb-6">
    <nav class="flex items-center space-x-2 text-sm">
        <a href="/sub-communities" class="text-gray-500 hover:text-gray-700">Sub-Communities</a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium">{{subCommunity.name}}</span>
    </nav>
</div>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
    <div class="flex items-start">
        {{#if subCommunity.image}}
        <img src="{{subCommunity.image}}" alt="{{subCommunity.name}}" class="w-20 h-20 rounded-xl object-cover mr-4">
        {{else}}
        <div class="w-20 h-20 bg-teal-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-10 h-10 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            </svg>
        </div>
        {{/if}}
        <div>
            <h1 class="text-2xl font-bold text-gray-900">{{subCommunity.name}}</h1>
            <div class="flex items-center mt-2 space-x-2">
                {{#if (eq subCommunity.status 1)}}
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Active</span>
                {{else}}
                <span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">Inactive</span>
                {{/if}}
                {{#if subCommunity.community}}
                <span class="text-gray-500">in</span>
                <a href="/communities/{{subCommunity.community.id}}" class="text-blue-600 hover:underline">{{subCommunity.community.name}}</a>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="mt-4 sm:mt-0 flex space-x-2">
        <a href="/sub-communities/{{subCommunity.id}}/edit" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
        </a>
        <a href="/sub-communities" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
            Back to List
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        {{#if subCommunity.description}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Description</h2>
            <div class="prose prose-gray max-w-none">
                {{subCommunity.description}}
            </div>
        </div>
        {{/if}}

        <!-- Location -->
        {{#if subCommunity.latitude}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Location</h2>
            <div class="aspect-video bg-gray-100 rounded-lg mb-4">
                <iframe
                    width="100%"
                    height="100%"
                    frameborder="0"
                    style="border:0"
                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8&q={{subCommunity.latitude}},{{subCommunity.longitude}}&zoom=14"
                    allowfullscreen>
                </iframe>
            </div>
            <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                </svg>
                Coordinates: {{subCommunity.latitude}}, {{subCommunity.longitude}}
            </div>
        </div>
        {{/if}}

        <!-- SEO Info -->
        {{#if subCommunity.meta_title}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">SEO Information</h2>
            <dl class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Meta Title</dt>
                    <dd class="mt-1 text-gray-900">{{subCommunity.meta_title}}</dd>
                </div>
                {{#if subCommunity.meta_description}}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Meta Description</dt>
                    <dd class="mt-1 text-gray-900">{{subCommunity.meta_description}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>
        {{/if}}
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Details -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Details</h2>
            <dl class="space-y-3">
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">ID</dt>
                    <dd class="text-sm text-gray-900">{{subCommunity.id}}</dd>
                </div>
                {{#if subCommunity.slug}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Slug</dt>
                    <dd class="text-sm text-gray-900">{{subCommunity.slug}}</dd>
                </div>
                {{/if}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Sort Order</dt>
                    <dd class="text-sm text-gray-900">{{subCommunity.sort_order}}</dd>
                </div>
                {{#if subCommunity.created_at}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Created</dt>
                    <dd class="text-sm text-gray-900">{{formatDate subCommunity.created_at}}</dd>
                </div>
                {{/if}}
                {{#if subCommunity.updated_at}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Updated</dt>
                    <dd class="text-sm text-gray-900">{{formatDate subCommunity.updated_at}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>

        <!-- Parent Community -->
        {{#if subCommunity.community}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Parent Community</h2>
            <a href="/communities/{{subCommunity.community.id}}" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors">
                {{#if subCommunity.community.image}}
                <img src="{{subCommunity.community.image}}" alt="{{subCommunity.community.name}}" class="w-12 h-12 rounded-lg object-cover mr-3">
                {{else}}
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    </svg>
                </div>
                {{/if}}
                <div class="flex-1">
                    <p class="font-medium text-gray-900">{{subCommunity.community.name}}</p>
                </div>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
        {{/if}}
    </div>
</div>
