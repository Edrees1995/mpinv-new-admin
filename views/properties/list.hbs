<!-- Bitrix24 Notice -->
<div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-6">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-blue-800 text-sm">{{bitrixNote}}</p>
    </div>
</div>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Properties</h1>
        <p class="text-gray-500 mt-1">Live data from Bitrix24 CRM</p>
    </div>
    <div class="mt-4 sm:mt-0">
        <span class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
            </svg>
            Total: {{pagination.total}} properties
        </span>
    </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
    <form action="/properties" method="GET" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Search -->
        <div>
            <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search</label>
            <input
                type="text"
                id="search"
                name="search"
                value="{{filters.search}}"
                placeholder="Search by title, ref..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
        </div>

        <!-- Property Type -->
        <div>
            <label for="property_type" class="block text-sm font-medium text-gray-700 mb-1">Property Type</label>
            <select
                id="property_type"
                name="property_type"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All Types</option>
                {{#each filterOptions.propertyTypes}}
                <option value="{{this}}" {{#if (eq this ../filters.property_type)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Offering Type -->
        <div>
            <label for="offering_type" class="block text-sm font-medium text-gray-700 mb-1">Offering Type</label>
            <select
                id="offering_type"
                name="offering_type"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All</option>
                {{#each filterOptions.offeringTypes}}
                <option value="{{this}}" {{#if (eq this ../filters.offering_type)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- City -->
        <div>
            <label for="city" class="block text-sm font-medium text-gray-700 mb-1">City</label>
            <select
                id="city"
                name="city"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All Cities</option>
                {{#each filterOptions.cities}}
                <option value="{{this}}" {{#if (eq this ../filters.city)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Community -->
        <div>
            <label for="community" class="block text-sm font-medium text-gray-700 mb-1">Community</label>
            <select
                id="community"
                name="community"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All Communities</option>
                {{#each filterOptions.communities}}
                <option value="{{this}}" {{#if (eq this ../filters.community)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Bedrooms -->
        <div>
            <label for="bedrooms" class="block text-sm font-medium text-gray-700 mb-1">Bedrooms</label>
            <select
                id="bedrooms"
                name="bedrooms"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All</option>
                {{#each filterOptions.bedrooms}}
                <option value="{{this}}" {{#if (eq this ../filters.bedrooms)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Filter Buttons -->
        <div class="md:col-span-2 flex items-end gap-2">
            <button
                type="submit"
                class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
            >
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                Apply Filters
            </button>
            <a
                href="/properties"
                class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
            >
                Clear
            </a>
        </div>
    </form>
</div>

<!-- Properties Grid -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    {{#if properties.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 p-6">
        {{#each properties}}
        <div class="bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
            <!-- Image -->
            <div class="relative aspect-[4/3] bg-gray-100">
                {{#if this.firstPhoto}}
                <img src="{{this.firstPhoto}}" alt="{{this.title_en}}" class="w-full h-full object-cover">
                {{else}}
                <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                </div>
                {{/if}}
                <!-- Type Badge -->
                <div class="absolute top-3 left-3">
                    <span class="px-2 py-1 text-xs font-medium rounded bg-blue-600 text-white">
                        {{this.property_type}}
                    </span>
                </div>
                <!-- Offering Badge -->
                <div class="absolute top-3 right-3">
                    <span class="px-2 py-1 text-xs font-medium rounded {{#if (eq this.offering_type 'Residential Sale')}}bg-green-600{{else}}bg-purple-600{{/if}} text-white">
                        {{this.offering_type}}
                    </span>
                </div>
            </div>

            <!-- Content -->
            <div class="p-4">
                <div class="text-xs text-gray-500 mb-1">Ref: {{this.reference_number}}</div>
                <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2">{{this.title_en}}</h3>

                <div class="flex items-center text-sm text-gray-600 mb-2">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    {{this.community}}, {{this.city}}
                </div>

                <div class="flex items-center gap-3 text-sm text-gray-600 mb-3">
                    {{#if this.bedroom}}
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        {{this.bedroom}} BR
                    </span>
                    {{/if}}
                    {{#if this.bathroom}}
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
                        </svg>
                        {{this.bathroom}} BA
                    </span>
                    {{/if}}
                    {{#if this.size}}
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                        </svg>
                        {{this.size}} sqft
                    </span>
                    {{/if}}
                </div>

                <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                    <span class="text-lg font-bold text-blue-600">{{this.formattedPrice}}</span>
                    <a
                        href="/properties/{{this.reference_number}}"
                        class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition-colors text-sm"
                    >
                        View Details
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.totalPages 1)}}
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-100">
        <div class="flex flex-col sm:flex-row items-center justify-between">
            <p class="text-sm text-gray-600 mb-4 sm:mb-0">
                Showing page {{pagination.page}} of {{pagination.totalPages}} ({{pagination.total}} total)
            </p>
            <div class="flex items-center space-x-2">
                {{#if pagination.hasPrev}}
                <a href="/properties?page={{pagination.prevPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.property_type}}&property_type={{filters.property_type}}{{/if}}{{#if filters.offering_type}}&offering_type={{filters.offering_type}}{{/if}}{{#if filters.city}}&city={{filters.city}}{{/if}}{{#if filters.community}}&community={{filters.community}}{{/if}}{{#if filters.bedrooms}}&bedrooms={{filters.bedrooms}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Previous</a>
                {{/if}}
                {{#each pagination.pages}}
                {{#if this.ellipsis}}
                <span class="px-2 py-2 text-sm text-gray-400">...</span>
                {{else}}
                <a href="/properties?page={{this.number}}{{#if ../filters.search}}&search={{../filters.search}}{{/if}}{{#if ../filters.property_type}}&property_type={{../filters.property_type}}{{/if}}{{#if ../filters.offering_type}}&offering_type={{../filters.offering_type}}{{/if}}{{#if ../filters.city}}&city={{../filters.city}}{{/if}}{{#if ../filters.community}}&community={{../filters.community}}{{/if}}{{#if ../filters.bedrooms}}&bedrooms={{../filters.bedrooms}}{{/if}}"
                   class="px-3 py-2 text-sm {{#if this.active}}bg-purple-600 text-white{{else}}text-gray-600 bg-white border border-gray-300 hover:bg-gray-50{{/if}} rounded-lg">{{this.number}}</a>
                {{/if}}
                {{/each}}
                {{#if pagination.hasNext}}
                <a href="/properties?page={{pagination.nextPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.property_type}}&property_type={{filters.property_type}}{{/if}}{{#if filters.offering_type}}&offering_type={{filters.offering_type}}{{/if}}{{#if filters.city}}&city={{filters.city}}{{/if}}{{#if filters.community}}&community={{filters.community}}{{/if}}{{#if filters.bedrooms}}&bedrooms={{filters.bedrooms}}{{/if}}"
                   class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{/if}}
    {{else}}
    <div class="p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No properties found</h3>
        <p class="text-gray-500">No properties match your current filters. Try adjusting your search criteria.</p>
        {{#if filters.search}}
        <a href="/properties" class="mt-4 inline-flex items-center text-blue-600 hover:underline">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Clear all filters
        </a>
        {{/if}}
    </div>
    {{/if}}
</div>
