<!-- Bitrix24 Notice -->
<div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-6">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-blue-800 text-sm">{{bitrixNote}}</p>
    </div>
</div>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Properties</h1>
        <p class="text-gray-500 mt-1">Manage and view all property listings</p>
    </div>
    <div class="mt-4 sm:mt-0">
        <span class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
            </svg>
            Total: {{pagination.total}} properties
        </span>
    </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
    <form action="/properties" method="GET" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Search -->
        <div>
            <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search</label>
            <input
                type="text"
                id="search"
                name="search"
                value="{{filters.search}}"
                placeholder="Search by title..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
        </div>

        <!-- Category -->
        <div>
            <label for="category_id" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <select
                id="category_id"
                name="category_id"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All Categories</option>
                {{#each categories}}
                <option value="{{this.id}}" {{#if (eq this.id ../filters.category_id)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Community -->
        <div>
            <label for="community_id" class="block text-sm font-medium text-gray-700 mb-1">Community</label>
            <select
                id="community_id"
                name="community_id"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All Communities</option>
                {{#each communities}}
                <option value="{{this.id}}" {{#if (eq this.id ../filters.community_id)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Purpose -->
        <div>
            <label for="purpose" class="block text-sm font-medium text-gray-700 mb-1">Purpose</label>
            <select
                id="purpose"
                name="purpose"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All</option>
                <option value="S" {{#if (eq filters.purpose "S")}}selected{{/if}}>For Sale</option>
                <option value="R" {{#if (eq filters.purpose "R")}}selected{{/if}}>For Rent</option>
            </select>
        </div>

        <!-- Status -->
        <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <select
                id="status"
                name="status"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
                <option value="">All</option>
                <option value="A" {{#if (eq filters.status "A")}}selected{{/if}}>Active</option>
                <option value="I" {{#if (eq filters.status "I")}}selected{{/if}}>Inactive</option>
            </select>
        </div>

        <!-- Filter Buttons -->
        <div class="md:col-span-2 lg:col-span-3 flex items-end gap-2">
            <button
                type="submit"
                class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
            >
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                Apply Filters
            </button>
            <a
                href="/properties"
                class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
            >
                Clear
            </a>
        </div>
    </form>
</div>

<!-- Properties Table -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    {{#if properties.length}}
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Property</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Category</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Location</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Price</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Purpose</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {{#each properties}}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        #{{this.id}}
                    </td>
                    <td class="px-6 py-4">
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gray-100 rounded-lg flex-shrink-0 overflow-hidden">
                                <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <a href="/properties/{{this.id}}" class="text-sm font-medium text-gray-900 hover:text-blue-600">
                                    {{this.title}}
                                </a>
                                <div class="text-xs text-gray-500 mt-1">
                                    {{#if this.bedrooms}}{{this.bedrooms}} BR{{/if}}
                                    {{#if this.bathrooms}} | {{this.bathrooms}} BA{{/if}}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm text-gray-900">{{#if this.category}}{{this.category.name}}{{else}}N/A{{/if}}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm text-gray-900">{{#if this.community}}{{this.community.name}}{{else}}N/A{{/if}}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm font-medium text-gray-900">{{this.formattedPrice}}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq this.purpose 'S')}}bg-green-100 text-green-800{{else}}bg-blue-100 text-blue-800{{/if}}">
                            {{this.purposeLabel}}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if this.isActive}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
                            {{this.statusLabel}}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a
                            href="/properties/{{this.id}}"
                            class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition-colors text-sm"
                        >
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            View
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.totalPages 1)}}
    <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-between">
        <div class="text-sm text-gray-500">
            Showing {{#if properties.length}}{{add (multiply (subtract pagination.page 1) pagination.limit) 1}}{{else}}0{{/if}} to {{min (multiply pagination.page pagination.limit) pagination.total}} of {{pagination.total}} properties
        </div>
        <nav class="flex items-center space-x-1">
            {{#if pagination.hasPrev}}
            <a
                href="/properties?page={{pagination.prevPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.category_id}}&category_id={{filters.category_id}}{{/if}}{{#if filters.community_id}}&community_id={{filters.community_id}}{{/if}}{{#if filters.purpose}}&purpose={{filters.purpose}}{{/if}}{{#if filters.status}}&status={{filters.status}}{{/if}}"
                class="px-3 py-2 rounded-lg border border-gray-300 text-gray-500 hover:bg-gray-50 transition-colors"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            {{/if}}

            {{#each pagination.range}}
                {{#if this.isEllipsis}}
                <span class="px-3 py-2 text-gray-400">...</span>
                {{else}}
                <a
                    href="/properties?page={{this.page}}{{#if ../filters.search}}&search={{../filters.search}}{{/if}}{{#if ../filters.category_id}}&category_id={{../filters.category_id}}{{/if}}{{#if ../filters.community_id}}&community_id={{../filters.community_id}}{{/if}}{{#if ../filters.purpose}}&purpose={{../filters.purpose}}{{/if}}{{#if ../filters.status}}&status={{../filters.status}}{{/if}}"
                    class="px-3 py-2 rounded-lg {{#if this.isCurrent}}bg-blue-600 text-white{{else}}border border-gray-300 text-gray-700 hover:bg-gray-50{{/if}} transition-colors"
                >
                    {{this.page}}
                </a>
                {{/if}}
            {{/each}}

            {{#if pagination.hasNext}}
            <a
                href="/properties?page={{pagination.nextPage}}{{#if filters.search}}&search={{filters.search}}{{/if}}{{#if filters.category_id}}&category_id={{filters.category_id}}{{/if}}{{#if filters.community_id}}&community_id={{filters.community_id}}{{/if}}{{#if filters.purpose}}&purpose={{filters.purpose}}{{/if}}{{#if filters.status}}&status={{filters.status}}{{/if}}"
                class="px-3 py-2 rounded-lg border border-gray-300 text-gray-500 hover:bg-gray-50 transition-colors"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
            {{/if}}
        </nav>
    </div>
    {{/if}}
    {{else}}
    <div class="p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No properties found</h3>
        <p class="text-gray-500">No properties match your current filters. Try adjusting your search criteria.</p>
        {{#if filters.search}}
        <a href="/properties" class="mt-4 inline-flex items-center text-blue-600 hover:underline">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Clear all filters
        </a>
        {{/if}}
    </div>
    {{/if}}
</div>
