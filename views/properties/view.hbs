{{#if error}}
<div class="bg-red-50 border border-red-200 rounded-xl p-6 text-center">
    <svg class="w-16 h-16 mx-auto text-red-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
    </svg>
    <h2 class="text-xl font-bold text-red-800 mb-2">{{error}}</h2>
    <a href="/properties" class="text-red-600 hover:underline">Back to Properties</a>
</div>
{{else}}

<!-- Bitrix24 Notice -->
<div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-6">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-blue-800 text-sm">{{bitrixNote}}</p>
    </div>
</div>

<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
        <li>
            <a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
            <a href="/properties" class="text-gray-500 hover:text-gray-700">Properties</a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">{{property.reference_number}}</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">{{property.title_en}}</h1>
        <div class="flex items-center gap-4 mt-2">
            <span class="text-gray-500">Ref: {{property.reference_number}}</span>
            <span class="px-2 py-1 text-xs font-medium rounded bg-blue-600 text-white">{{property.property_type}}</span>
            <span class="px-2 py-1 text-xs font-medium rounded bg-green-600 text-white">{{property.offering_type}}</span>
        </div>
    </div>
    <a href="/properties" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to List
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Image Gallery -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            {{#if featuredPhoto}}
            <div class="aspect-video bg-gray-100">
                <img src="{{featuredPhoto}}" alt="{{property.title_en}}" class="w-full h-full object-cover" id="mainImage">
            </div>
            {{#if (gt photos.length 1)}}
            <div class="p-4 grid grid-cols-6 gap-2">
                {{#each photos}}
                <button onclick="document.getElementById('mainImage').src='{{this}}'" class="aspect-square bg-gray-100 rounded overflow-hidden hover:opacity-75 transition-opacity">
                    <img src="{{this}}" alt="Photo {{@index}}" class="w-full h-full object-cover">
                </button>
                {{/each}}
            </div>
            {{/if}}
            {{else}}
            <div class="aspect-video bg-gray-100 flex items-center justify-center">
                <svg class="w-24 h-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            {{/if}}
        </div>

        <!-- Description -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Description</h2>
            {{#if property.description_en}}
            <div class="prose prose-sm max-w-none text-gray-600 whitespace-pre-line">{{property.description_en}}</div>
            {{else}}
            <p class="text-gray-500 italic">No description available</p>
            {{/if}}
        </div>

        <!-- Amenities -->
        {{#if amenities.length}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Amenities</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                {{#each amenities}}
                <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {{this}}
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <!-- Floor Plans -->
        {{#if floorPlans.length}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Floor Plans</h2>
            <div class="grid grid-cols-2 gap-4">
                {{#each floorPlans}}
                <a href="{{this}}" target="_blank" class="block">
                    <img src="{{this}}" alt="Floor Plan" class="w-full rounded-lg border border-gray-200 hover:opacity-75 transition-opacity">
                </a>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Price Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="text-3xl font-bold text-blue-600 mb-2">{{property.formattedPrice}}</div>
            {{#if property.size}}
            <div class="text-sm text-gray-500">{{property.formattedSize}}</div>
            {{/if}}
        </div>

        <!-- Property Details -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Property Details</h2>
            <dl class="space-y-4">
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Reference</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.reference_number}}</dd>
                </div>
                {{#if property.permit_number}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Permit Number</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.permit_number}}</dd>
                </div>
                {{/if}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Type</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.property_type}}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Offering</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.offering_type}}</dd>
                </div>
                {{#if property.bedroom}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Bedrooms</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.bedroom}}</dd>
                </div>
                {{/if}}
                {{#if property.bathroom}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Bathrooms</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.bathroom}}</dd>
                </div>
                {{/if}}
                {{#if property.size}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Size</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.size}} sq.ft</dd>
                </div>
                {{/if}}
                {{#if property.plot_size}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Plot Size</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.plot_size}} sq.ft</dd>
                </div>
                {{/if}}
                {{#if property.parking}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Parking</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.parking}}</dd>
                </div>
                {{/if}}
                {{#if property.floor}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Floor</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.floor}}</dd>
                </div>
                {{/if}}
                {{#if property.furnished}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Furnished</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.furnished}}</dd>
                </div>
                {{/if}}
                {{#if property.completion_status}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Status</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.completion_status}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>

        <!-- Location -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Location</h2>
            <dl class="space-y-4">
                {{#if property.city}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">City</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.city}}</dd>
                </div>
                {{/if}}
                {{#if property.community}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Community</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.community}}</dd>
                </div>
                {{/if}}
                {{#if property.sub_community}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Sub-Community</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.sub_community}}</dd>
                </div>
                {{/if}}
                {{#if property.property_name}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Project</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.property_name}}</dd>
                </div>
                {{/if}}
                {{#if property.developer}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Developer</dt>
                    <dd class="text-sm font-medium text-gray-900">{{property.developer}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>

        <!-- Agent Info -->
        {{#if property.agent}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Agent</h2>
            <div class="space-y-3">
                <div class="font-medium text-gray-900">{{property.agent.name}}</div>
                {{#if property.agent.email}}
                <a href="mailto:{{property.agent.email}}" class="flex items-center text-sm text-blue-600 hover:underline">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    {{property.agent.email}}
                </a>
                {{/if}}
                {{#if property.agent.phone}}
                <a href="tel:{{property.agent.phone}}" class="flex items-center text-sm text-blue-600 hover:underline">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    {{property.agent.phone}}
                </a>
                {{/if}}
            </div>
        </div>
        {{/if}}
    </div>
</div>
{{/if}}
