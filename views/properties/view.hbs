{{#if error}}
<!-- Error State -->
<div class="max-w-2xl mx-auto text-center py-12">
    <svg class="w-20 h-20 mx-auto text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <h2 class="text-2xl font-bold text-gray-900 mb-2">{{title}}</h2>
    <p class="text-gray-500 mb-6">{{error}}</p>
    <a href="/properties" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Properties
    </a>
</div>
{{else}}

<!-- Bitrix24 Notice -->
<div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-6">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-blue-800 text-sm">{{bitrixNote}}</p>
    </div>
</div>

<!-- Breadcrumb -->
<nav class="flex items-center space-x-2 text-sm text-gray-500 mb-6">
    <a href="/" class="hover:text-gray-700">Dashboard</a>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <a href="/properties" class="hover:text-gray-700">Properties</a>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-900 font-medium">{{property.title}}</span>
</nav>

<!-- Page Header -->
<div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-6">
    <div class="flex-1">
        <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-gray-900">{{property.title}}</h1>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {{#if property.isActive}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
                {{property.statusLabel}}
            </span>
        </div>
        <p class="text-gray-500 mt-1">Property ID: #{{property.id}}</p>
    </div>
    <div class="mt-4 lg:mt-0 flex items-center space-x-3">
        <a
            href="/properties"
            class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
        >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to List
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Image Gallery -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            {{#if featuredImage}}
            <div class="aspect-video bg-gray-100 overflow-hidden">
                <img src="https://mpinv.cloud/uploads/ad_images/{{featuredImage.image}}" alt="{{property.title}}" class="w-full h-full object-cover">
            </div>
            {{else}}
            <div class="aspect-video bg-gray-100 flex items-center justify-center">
                <svg class="w-24 h-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            {{/if}}

            {{#if (gt images.length 1)}}
            <div class="p-4 border-t border-gray-100">
                <div class="grid grid-cols-6 gap-2">
                    {{#each images}}
                    <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden {{#if (eq @index 0)}}ring-2 ring-blue-500{{/if}}">
                        <img src="https://mpinv.cloud/uploads/ad_images/{{this.thumbnail}}" alt="Image {{add @index 1}}" class="w-full h-full object-cover cursor-pointer hover:opacity-80 transition-opacity">
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>

        <!-- Description -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Description</h2>
            {{#if property.description}}
            <div class="prose prose-sm max-w-none text-gray-600">
                {{property.description}}
            </div>
            {{else}}
            <p class="text-gray-500 italic">No description available.</p>
            {{/if}}

            {{#if property.short_description}}
            <div class="mt-4 pt-4 border-t border-gray-100">
                <h3 class="text-sm font-medium text-gray-900 mb-2">Short Description</h3>
                <p class="text-gray-600">{{property.short_description}}</p>
            </div>
            {{/if}}
        </div>

        <!-- Amenities -->
        {{#if amenities.length}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Amenities</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                {{#each amenities}}
                <div class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-sm text-gray-700">{{this.name}}</span>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <!-- Location Map -->
        {{#if property.latitude}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Location</h2>
            <div class="bg-gray-100 rounded-lg h-64 flex items-center justify-center">
                <div class="text-center">
                    <svg class="w-12 h-12 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <p class="text-gray-500 text-sm">Lat: {{property.latitude}}</p>
                    <p class="text-gray-500 text-sm">Lng: {{property.longitude}}</p>
                    <a href="https://www.google.com/maps?q={{property.latitude}},{{property.longitude}}" target="_blank" class="mt-2 inline-block text-blue-600 hover:underline text-sm">
                        View on Google Maps
                    </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Price Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="text-center">
                <p class="text-3xl font-bold text-blue-600">{{property.formattedPrice}}</p>
                <span class="inline-flex items-center px-3 py-1 mt-2 rounded-full text-sm font-medium {{#if (eq property.purpose 'S')}}bg-green-100 text-green-800{{else}}bg-blue-100 text-blue-800{{/if}}">
                    {{property.purposeLabel}}
                </span>
            </div>
        </div>

        <!-- Property Details -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Property Details</h2>
            <dl class="space-y-4">
                {{#if property.bedrooms}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">Bedrooms</dt>
                    <dd class="font-medium text-gray-900">{{property.bedrooms}}</dd>
                </div>
                {{/if}}

                {{#if property.bathrooms}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">Bathrooms</dt>
                    <dd class="font-medium text-gray-900">{{property.bathrooms}}</dd>
                </div>
                {{/if}}

                {{#if property.category}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">Category</dt>
                    <dd class="font-medium text-gray-900">{{property.category.name}}</dd>
                </div>
                {{/if}}

                {{#if property.community}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">Community</dt>
                    <dd class="font-medium text-gray-900">{{property.community.name}}</dd>
                </div>
                {{/if}}

                {{#if property.phone}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">Contact</dt>
                    <dd class="font-medium text-gray-900">{{property.phone}}</dd>
                </div>
                {{/if}}

                <div class="flex justify-between">
                    <dt class="text-gray-500">Added</dt>
                    <dd class="font-medium text-gray-900">{{property.formattedDate}}</dd>
                </div>

                {{#if property.priority}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">Priority</dt>
                    <dd class="font-medium text-gray-900">{{property.priority}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>

        <!-- All Images -->
        {{#if (gt images.length 0)}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">All Images ({{images.length}})</h2>
            <div class="space-y-3">
                {{#each images}}
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 bg-gray-200 rounded-lg overflow-hidden">
                            <img src="https://mpinv.cloud/uploads/ad_images/{{this.thumbnail}}" alt="Image" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Image {{add @index 1}}</p>
                            {{#if this.is_featured}}
                            <span class="text-xs text-blue-600">Featured</span>
                            {{/if}}
                        </div>
                    </div>
                    <span class="text-xs text-gray-400">Sort: {{this.sort_order}}</span>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <!-- Meta Information -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Technical Info</h2>
            <dl class="space-y-3 text-sm">
                <div class="flex justify-between">
                    <dt class="text-gray-500">Property ID</dt>
                    <dd class="font-mono text-gray-900">{{property.id}}</dd>
                </div>
                {{#if property.slug}}
                <div>
                    <dt class="text-gray-500 mb-1">Slug</dt>
                    <dd class="font-mono text-gray-900 text-xs break-all bg-gray-50 p-2 rounded">{{property.slug}}</dd>
                </div>
                {{/if}}
                <div class="flex justify-between">
                    <dt class="text-gray-500">User ID</dt>
                    <dd class="font-mono text-gray-900">{{property.user_id}}</dd>
                </div>
            </dl>
        </div>
    </div>
</div>
{{/if}}
