<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Settings</h1>
        <p class="text-gray-600 mt-1">{{totalSettings}} settings across {{categories.length}} categories</p>
    </div>
</div>

<!-- Categories Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {{#each categories}}
    <a href="/settings/category?name={{this.category}}"
        class="bg-white rounded-xl shadow-sm border border-gray-100 p-5 hover:shadow-md hover:border-gray-200 transition-all group">
        <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
                <h3 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors truncate">{{this.label}}</h3>
                <p class="text-xs text-gray-400 mt-1 truncate font-mono">{{this.category}}</p>
            </div>
            <span class="ml-3 flex-shrink-0 inline-flex items-center justify-center w-8 h-8 bg-gray-100 text-gray-600 text-xs font-semibold rounded-lg group-hover:bg-blue-50 group-hover:text-blue-600 transition-colors">
                {{this.count}}
            </span>
        </div>
    </a>
    {{/each}}
</div>
