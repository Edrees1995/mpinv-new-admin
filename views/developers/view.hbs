<!-- Breadcrumb -->
<div class="mb-6">
    <nav class="flex items-center space-x-2 text-sm">
        <a href="/developers" class="text-gray-500 hover:text-gray-700">Developers</a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium">{{developer.name}}</span>
    </nav>
</div>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
    <div class="flex items-start">
        {{#if developer.logo}}
        <img src="{{developer.logo}}" alt="{{developer.name}}" class="w-20 h-20 rounded-xl object-cover mr-4" onerror="this.style.display='none';this.nextElementSibling.style.display='flex'">
        <div class="w-20 h-20 bg-purple-100 rounded-xl items-center justify-center mr-4" style="display:none">
            <span class="text-3xl font-bold text-purple-600">{{substring developer.name 0 1}}</span>
        </div>
        {{else}}
        <div class="w-20 h-20 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
            <span class="text-3xl font-bold text-purple-600">{{substring developer.name 0 1}}</span>
        </div>
        {{/if}}
        <div>
            <h1 class="text-2xl font-bold text-gray-900">{{developer.name}}</h1>
            <div class="flex items-center mt-2 space-x-2">
                {{#if (eq developer.status "A")}}
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Active</span>
                {{else}}
                <span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">Inactive</span>
                {{/if}}
                {{#if (eq developer.featured "1")}}
                <span class="px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded-full">Featured</span>
                {{/if}}
                {{#if (eq developer.show_on_home "1")}}
                <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">Show on Home</span>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="mt-4 sm:mt-0 flex space-x-2">
        <a href="/developers/{{developer.id}}/edit" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
        </a>
        <a href="/developers" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
            Back to List
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        {{#if developer.description}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">About</h2>
            <div class="prose prose-gray max-w-none">
                {{developer.description}}
            </div>
        </div>
        {{/if}}

        <!-- Projects -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900">Projects</h2>
                <span class="px-2 py-1 bg-purple-100 text-purple-700 text-sm font-medium rounded-full">
                    {{#if developer.projects}}{{developer.projects.length}}{{else}}0{{/if}} projects
                </span>
            </div>
            {{#if developer.projects}}
            <div class="space-y-3">
                {{#each developer.projects}}
                <a href="/projects/{{this.id}}" class="flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors">
                    {{#if this.featured_image}}
                    <img src="{{this.featured_image}}" alt="{{this.name}}" class="w-12 h-12 rounded-lg object-cover mr-3">
                    {{else}}
                    <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    {{/if}}
                    <div class="flex-1">
                        <p class="font-medium text-gray-900">{{this.name}}</p>
                        <p class="text-sm text-gray-500">
                            {{#if (eq this.status "A")}}Active{{else}}Inactive{{/if}}
                        </p>
                    </div>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
                {{/each}}
            </div>
            {{else}}
            <p class="text-gray-500 text-center py-4">No projects associated with this developer</p>
            {{/if}}
        </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Contact Info -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h2>
            <div class="space-y-4">
                {{#if developer.email}}
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Email</p>
                        <a href="mailto:{{developer.email}}" class="text-purple-600 hover:underline">{{developer.email}}</a>
                    </div>
                </div>
                {{/if}}
                {{#if developer.phone}}
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Phone</p>
                        <a href="tel:{{developer.phone}}" class="text-gray-900">{{developer.phone}}</a>
                    </div>
                </div>
                {{/if}}
                {{#if developer.website}}
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Website</p>
                        <a href="{{developer.website}}" target="_blank" class="text-purple-600 hover:underline">{{developer.website}}</a>
                    </div>
                </div>
                {{/if}}
                {{#if developer.address}}
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Address</p>
                        <p class="text-gray-900">{{developer.address}}</p>
                    </div>
                </div>
                {{/if}}
                {{#unless developer.email}}{{#unless developer.phone}}{{#unless developer.website}}{{#unless developer.address}}
                <p class="text-gray-500 text-center">No contact information available</p>
                {{/unless}}{{/unless}}{{/unless}}{{/unless}}
            </div>
        </div>

        <!-- Details -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Details</h2>
            <dl class="space-y-3">
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">ID</dt>
                    <dd class="text-sm text-gray-900">{{developer.id}}</dd>
                </div>
                {{#if developer.slug}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Slug</dt>
                    <dd class="text-sm text-gray-900">{{developer.slug}}</dd>
                </div>
                {{/if}}
                {{#if developer.priority}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Priority</dt>
                    <dd class="text-sm text-gray-900">{{developer.priority}}</dd>
                </div>
                {{/if}}
                {{#if developer.created_at}}
                <div class="flex justify-between">
                    <dt class="text-sm text-gray-500">Created</dt>
                    <dd class="text-sm text-gray-900">{{formatDate developer.created_at}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>
    </div>
</div>
