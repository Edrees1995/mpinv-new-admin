<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li><a href="/subcategories" class="text-gray-500 hover:text-gray-700">Subcategories</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-900 font-medium">{{subcategory.name}}</li>
    </ol>
</nav>

<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">{{subcategory.name}}</h1>
        <p class="text-gray-600">ID: {{subcategory.id}} | Slug: {{subcategory.slug}}</p>
    </div>
    <div class="flex items-center space-x-3 mt-4 sm:mt-0">
        <a href="/subcategories/{{subcategory.id}}/edit" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600">Edit</a>
        <a href="/subcategories" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">Back to List</a>
    </div>
</div>

<div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
        <h3 class="text-lg font-semibold text-gray-900">Details</h3>
    </div>
    <div class="p-6">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
                <dt class="text-sm font-medium text-gray-500">Subcategory Name</dt>
                <dd class="mt-1 text-gray-900">{{subcategory.name}}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Category</dt>
                <dd class="mt-1">{{#if subcategory.category}}<a href="/categories/{{subcategory.category.id}}" class="text-indigo-600 hover:underline">{{subcategory.category.name}}</a>{{else}}<span class="text-gray-400">-</span>{{/if}}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Slug</dt>
                <dd class="mt-1 text-gray-900">{{subcategory.slug}}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Priority</dt>
                <dd class="mt-1 text-gray-900">{{subcategory.priority}}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                    {{#if (eq subcategory.status "A")}}<span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Active</span>
                    {{else}}<span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">Inactive</span>{{/if}}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Date Added</dt>
                <dd class="mt-1 text-gray-900">{{#if subcategory.date_added}}{{formatDate subcategory.date_added}}{{else}}<span class="text-gray-400">-</span>{{/if}}</dd>
            </div>
        </dl>
    </div>
</div>
