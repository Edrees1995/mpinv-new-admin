<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/banners" class="text-gray-500 hover:text-gray-700">Banners</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/banners/{{banner.id}}" class="text-gray-500 hover:text-gray-700">Banner #{{banner.id}}</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Edit</li>
    </ol>
</nav>

<div class="max-w-4xl">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Banner #{{banner.id}}</h1>

    <form action="/banners/{{banner.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Fields -->
            <div class="lg:col-span-2 space-y-6">
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Banner Details</h2>
                    <div class="space-y-4">
                        <div>
                            <label for="ad_type" class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                            <select name="ad_type" id="ad_type" onchange="toggleType()"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="adImage" {{#if (eq banner.ad_type "adImage")}}selected{{/if}}>Image</option>
                                <option value="adSense" {{#if (eq banner.ad_type "adSense")}}selected{{/if}}>AdSense</option>
                            </select>
                        </div>
                        <div id="image-fields" {{#if (eq banner.ad_type "adSense")}}class="hidden"{{/if}}>
                            <div class="space-y-4">
                                <div>
                                    <label for="image" class="block text-sm font-medium text-gray-700 mb-1">Image Filename</label>
                                    <input type="text" name="image" id="image" value="{{banner.image}}" placeholder="e.g. banner-homepage.jpg"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <p class="mt-1 text-xs text-gray-500">Filename in uploads/ads/ directory</p>
                                    {{#if banner.image}}
                                    <div class="mt-2">
                                        <img src="{{banner.image}}" alt="Current banner" class="max-h-40 rounded-lg border">
                                    </div>
                                    {{/if}}
                                </div>
                                <div>
                                    <label for="link" class="block text-sm font-medium text-gray-700 mb-1">Link URL</label>
                                    <input type="text" name="link" id="link" value="{{banner.link}}" placeholder="https://example.com"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                </div>
                            </div>
                        </div>
                        <div id="script-field" {{#if (eq banner.ad_type "adImage")}}class="hidden"{{/if}}>
                            <label for="script" class="block text-sm font-medium text-gray-700 mb-1">AdSense Script</label>
                            <textarea name="script" id="script" rows="6" placeholder="Paste your AdSense script here..."
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm">{{banner.script}}</textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Settings</h2>
                    <div class="space-y-4">
                        <div>
                            <label for="position_id" class="block text-sm font-medium text-gray-700 mb-1">Position ID</label>
                            <input type="number" name="position_id" id="position_id" value="{{banner.position_id}}" min="0"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="priority" class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
                            <input type="number" name="priority" id="priority" value="{{banner.priority}}" min="0"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                            <select name="status" id="status"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="A" {{#if (eq banner.status "A")}}selected{{/if}}>Active</option>
                                <option value="I" {{#if (eq banner.status "I")}}selected{{/if}}>Inactive</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="flex space-x-3">
                    <a href="/banners/{{banner.id}}" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors text-center">
                        Cancel
                    </a>
                    <button type="submit" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Update
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function toggleType() {
        var type = document.getElementById('ad_type').value;
        if (type === 'adSense') {
            document.getElementById('image-fields').classList.add('hidden');
            document.getElementById('script-field').classList.remove('hidden');
        } else {
            document.getElementById('image-fields').classList.remove('hidden');
            document.getElementById('script-field').classList.add('hidden');
        }
    }
</script>
