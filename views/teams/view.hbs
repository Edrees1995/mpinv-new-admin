<!-- Breadcrumb -->
<nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-500 hover:text-gray-700">Dashboard</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/teams" class="text-gray-500 hover:text-gray-700">Team</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium truncate max-w-xs">{{member.title}}</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <div class="flex items-center">
        {{#if member.banner}}
        <img src="{{member.banner}}" alt="{{member.title}}" class="w-14 h-14 rounded-xl object-cover mr-4">
        {{else}}
        <div class="w-14 h-14 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
            <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
        </div>
        {{/if}}
        <div>
            <h1 class="text-2xl font-bold text-gray-900">{{member.title}}</h1>
            {{#if member.subtitle}}
            <p class="text-gray-500 text-sm mt-1">{{member.subtitle}}</p>
            {{/if}}
        </div>
    </div>
    <div class="flex items-center space-x-3 mt-4 sm:mt-0">
        <a href="/teams/{{member.id}}/edit" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
        </a>
        <button onclick="deleteMember({{member.id}}, '{{member.title}}')"
            class="inline-flex items-center px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
        </button>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Photo -->
        {{#if member.banner}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Photo</h2>
            <img src="{{member.banner}}" alt="{{member.title}}" class="w-full max-w-sm rounded-lg">
        </div>
        {{/if}}

        <!-- Bio -->
        {{#if member.content}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Bio</h2>
            <div class="prose max-w-none text-gray-700">
                {{{member.content}}}
            </div>
        </div>
        {{/if}}

        <!-- Contact -->
        {{#if (or member.phone member.mobile)}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Contact</h2>
            <dl class="space-y-3">
                {{#if member.phone}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Phone</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.phone}}</dd>
                </div>
                {{/if}}
                {{#if member.mobile}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Mobile</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.mobile}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>
        {{/if}}

        <!-- Social Links -->
        {{#if (or member.linked_in member.facebook member.insta member.twitter member.telegram)}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Social Links</h2>
            <div class="space-y-3">
                {{#if member.linked_in}}
                <div class="flex items-center">
                    <span class="w-24 text-xs font-medium text-gray-500 uppercase">LinkedIn</span>
                    <a href="{{member.linked_in}}" target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline truncate">{{member.linked_in}}</a>
                </div>
                {{/if}}
                {{#if member.facebook}}
                <div class="flex items-center">
                    <span class="w-24 text-xs font-medium text-gray-500 uppercase">Facebook</span>
                    <a href="{{member.facebook}}" target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline truncate">{{member.facebook}}</a>
                </div>
                {{/if}}
                {{#if member.insta}}
                <div class="flex items-center">
                    <span class="w-24 text-xs font-medium text-gray-500 uppercase">Instagram</span>
                    <a href="{{member.insta}}" target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline truncate">{{member.insta}}</a>
                </div>
                {{/if}}
                {{#if member.twitter}}
                <div class="flex items-center">
                    <span class="w-24 text-xs font-medium text-gray-500 uppercase">Twitter</span>
                    <a href="{{member.twitter}}" target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline truncate">{{member.twitter}}</a>
                </div>
                {{/if}}
                {{#if member.telegram}}
                <div class="flex items-center">
                    <span class="w-24 text-xs font-medium text-gray-500 uppercase">Telegram</span>
                    <a href="{{member.telegram}}" target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline truncate">{{member.telegram}}</a>
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}

        <!-- SEO -->
        {{#if (or member.meta_title member.meta_description)}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">SEO</h2>
            <dl class="space-y-3">
                {{#if member.meta_title}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Meta Title</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.meta_title}}</dd>
                </div>
                {{/if}}
                {{#if member.meta_description}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Meta Description</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.meta_description}}</dd>
                </div>
                {{/if}}
            </dl>
        </div>
        {{/if}}
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Details</h2>
            <dl class="space-y-3">
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Status</dt>
                    <dd class="mt-1">
                        {{#if (eq member.status "published")}}
                        <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Published</span>
                        {{else}}
                        <span class="px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded-full">{{member.status}}</span>
                        {{/if}}
                    </dd>
                </div>
                {{#if member.team_type}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Team</dt>
                    <dd class="mt-1">
                        <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded-full">{{member.team_type}}</span>
                    </dd>
                </div>
                {{/if}}
                {{#if member.subtitle}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Designation</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.subtitle}}</dd>
                </div>
                {{/if}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Slug</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.slug}}</dd>
                </div>
                {{#if member.priority}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Priority</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{member.priority}}</dd>
                </div>
                {{/if}}
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Created</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{formatDateTime member.date_added}}</dd>
                </div>
                <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">Last Updated</dt>
                    <dd class="mt-1 text-sm text-gray-700">{{formatDateTime member.last_updated}}</dd>
                </div>
            </dl>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h2>
            <div class="space-y-2">
                <a href="/teams/{{member.id}}/edit" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                    <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Member
                </a>
                <a href="/teams" class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                    <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                    </svg>
                    Back to List
                </a>
                <button onclick="deleteMember({{member.id}}, '{{member.title}}')" class="flex items-center w-full px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete Member
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div id="delete-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6">
        <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-full mx-auto mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 text-center mb-2">Delete Team Member</h3>
        <p class="text-gray-600 text-center mb-6">Are you sure you want to delete "<span id="delete-member-name" class="font-medium"></span>"? This action cannot be undone.</p>
        <div class="flex space-x-4">
            <button onclick="closeDeleteModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                Cancel
            </button>
            <form id="delete-form" method="POST" class="flex-1">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function deleteMember(id, name) {
        document.getElementById('delete-member-name').textContent = name;
        document.getElementById('delete-form').action = '/teams/' + id + '?_method=DELETE';
        document.getElementById('delete-modal').classList.remove('hidden');
        document.getElementById('delete-modal').classList.add('flex');
    }

    function closeDeleteModal() {
        document.getElementById('delete-modal').classList.add('hidden');
        document.getElementById('delete-modal').classList.remove('flex');
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeDeleteModal();
    });

    document.getElementById('delete-modal').addEventListener('click', function(e) {
        if (e.target === this) closeDeleteModal();
    });
</script>
